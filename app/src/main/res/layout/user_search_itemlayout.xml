<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_serach"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="TextView"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/profile_image_serach"
        app:layout_constraintTop_toTopOf="@id/profile_image_serach" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageonline_serach"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_brightness_1_24"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image_serach"
        app:layout_constraintEnd_toStartOf="@+id/user_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/profile_image_serach"
        app:layout_constraintTop_toTopOf="@+id/user_name"
        app:layout_constraintVertical_bias="1.0" />
 <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageoffline_serach"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_brightness_1_24"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image_serach"
        app:layout_constraintEnd_toStartOf="@+id/user_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/profile_image_serach"
        app:layout_constraintTop_toTopOf="@+id/user_name"
        app:layout_constraintVertical_bias="1.0" />
    <TextView
        android:id="@+id/message_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:textSize="16dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/profile_image_serach"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryDark"

        />

</androidx.constraintlayout.widget.ConstraintLayout>